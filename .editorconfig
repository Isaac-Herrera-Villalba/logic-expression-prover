# .editorconfig
# EditorConfig ayuda a mantener estilos de codificación consistentes entre editores
root = true

#############################
# Reglas por defecto
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

######################################
# FIcheros de texto plano y markdown
[*.{md,txt}]
# Evita borrar espacios en blanco en listas o poesía
trim_trailing_whitespace = false
max_line_length = 80

######################################
# Ficheros Python
[*.py]
indent_style = space
indent_size = 4
# Recomendado por Black
max_line_length = 88
trim_trailing_whitespace = true
insert_final_newline = true

######################################
# Ficheros Prolog
[*.pl]
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

######################################
# Ficheros Makefile
[Makefile]
# Make requiere tabs para las reglas
indent_style = tab
trim_trailing_whitespace = false

######################################
# Ficheros LaTeX
[*.tex]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

